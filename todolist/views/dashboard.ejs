<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="./style/stylesheet.css">
    <title>Document</title>
</head>
<body>
    <h1 class="container">Hello <%= name %></h1>
    <ul>
        <% Object.keys(list).forEach(key => { %>
            <li class="d-flex"> 
                <div>
                    <%= list[key] %>
                </div>
                <div>
                    <form action="/api/delete" method="POST">
                        <input class="space-left-button" type="submit" value="DELETE" name=<%= key %>>
                    </form>
                </div>
                <div>
                    <form action="/api/update" method="POST">
                        <input class="space-left-button" type="submit" value="Mark As Done" name=<%= key %>>
                    </form>
                </div>
            </li>
        <%  }); %>
    </ul>
    <%= todos %>
    <ul>
        <% Object.keys(todos).forEach(key => { %>
            <li>
                <%= todos[key].todo %> 
                <% if(todos[key].isDone === true) {%>
                    <%= todos[key].isDone %>
                <% } else { %>
                    <form action="/api/done" method="POST">
                        <input class="space-left-button" type="submit" value="Mark As Done" name=<%= todos[key].username %>>
                        <input type="hidden" id="custId" name="id" value=<%= todos[key]._id %>>
                    </form>
                <% }; %>
            </li>
        <%  }); %>
    </ul>
</body>
</html>